# FastAPI Application Settings
APP_NAME="Flawless FastAPI Backend"
APP_DESCRIPTION="A production-ready FastAPI application"
APP_VERSION="0.1.0"
APP_SECRET_KEY="YOUR_SUPER_SECRET_KEY_HERE" # CHANGE THIS IN PRODUCTION! Generate a strong random string.

# Database Settings (PostgreSQL)
POSTGRES_USER="user"
POSTGRES_PASSWORD="password"
POSTGRES_DB="flawless_db"
POSTGRES_HOST="db" # Name of the service in docker-compose
POSTGRES_PORT="5432"
DATABASE_URL="postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}"

# Redis Settings (for Sessions)
REDIS_HOST="redis" # Name of the service in docker-compose
REDIS_PORT="6379"
REDIS_DB=0
REDIS_PASSWORD="" # Optional, if Redis is password protected

# Session Settings
SESSION_SECRET_KEY="ANOTHER_VERY_LONG_AND_RANDOM_SECRET_KEY" # Used for signing session cookies
SESSION_COOKIE_NAME="flawless_session"
SESSION_COOKIE_DOMAIN="" # Set to your frontend domain in production (e.g., .yourdomain.com)
SESSION_COOKIE_SAMESITE="Lax" # Lax, Strict, or None (use None with Secure=True for cross-site)
SESSION_COOKIE_SECURE="False" # Set to True in production (requires HTTPS)
SESSION_COOKIE_HTTPONLY="True" # ALWAYS True

# Session Expiry (in seconds)
SESSION_IDLE_TIMEOUT=1800 # 30 minutes of inactivity
SESSION_ABSOLUTE_TIMEOUT=86400 # 24 hours total session duration

# CORS Settings (for Frontend)
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"] # Your frontend URL(s). Add production domains later.
CORS_METHODS=["*"]
CORS_HEADERS=["*"]